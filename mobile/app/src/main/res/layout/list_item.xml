<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_train_name"
            android:text="Train Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_label_schedule_date"
            android:text="Schedule Date:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@+id/list_train_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_schedule_date"
            android:text="June 21, 2023"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/list_train_name"
            android:layout_toEndOf="@id/list_label_schedule_date"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_label_available_seats"
            android:text="Available Seats:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@+id/list_label_schedule_date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_available_seats"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/list_label_schedule_date"
            android:layout_toEndOf="@id/list_label_available_seats"
            android:layout_marginTop="8dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
